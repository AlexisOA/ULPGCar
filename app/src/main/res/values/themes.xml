<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ULPGCarPrototype" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>

    </style>

    <style name="CustomViewAllTab" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/proximanovaregular</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/grease</item>
        <item name="android:textColor">@color/greaselight</item>
    </style>

    <style name="myApp.NumberPicker" parent="Theme.AppCompat">
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="datePickerTheme" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:colorAccent">@color/blue_ulpgc</item>
        <item name="android:windowBackground">@color/background_ulpgcar</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/blue_ulpgc</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:weekNumberColor">@color/blue_ulpgc</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>