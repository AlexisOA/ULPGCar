<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.publish.PassengerFragment"
    android:background="@color/background_ulpgcar">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:id="@+id/onePassenger"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/greaselight"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="30dp"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="109dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:id="@+id/twoPassengers"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/greaselight"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="30dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="109dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:id="@+id/threePassengers"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/greaselight"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="30dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="241dp"
            tools:layout_editor_absoluteY="116dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:id="@+id/fourPassengers"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/greaselight"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="30dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="335dp"
            tools:layout_editor_absoluteY="116dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/titlePassenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/proximanovaregular"
        android:text="Pasajeros"
        android:textColor="@color/blue_ulpgc"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionPassenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="¿A cuántos puedes llevar?"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/proximanovaregular"
        android:textColor="@color/black"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="4.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="1.0dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/back"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/button_rounded_grease_light"
                android:fontFamily="@font/proximanovaregular"
                android:text="Atrás"
                android:textColor="@color/black"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="20dp"/>

            <Button
                android:id="@+id/next"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="20sp"
                android:layout_weight="1.0"
                android:background="@drawable/button_rounded_grease"
                android:text="Continuar"
                android:textColor="@color/white"
                android:enabled="false"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>